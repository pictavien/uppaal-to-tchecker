/*
 * A single process that communicates through a channel 'a' using CSP-like
 * synchronization.
 */

const int N = 2;
chan a, b;

process Processes(int [1,N] pid) {

state
    A,
    B;
init
    A;
trans
    A -> B { sync a; },
    B -> A { sync b; };
}

P1 := Processes(1);
P2 := Processes(2);

system P1, P2;

IO P1 {a, b}
IO P2 {a, b}
